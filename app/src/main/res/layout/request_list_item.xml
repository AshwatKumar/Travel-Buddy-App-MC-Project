<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/requested_person_image"
                android:layout_width="143dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/requested_person_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/requested_person_image"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:shadowColor="@color/cardview_dark_background"
                android:text="@string/name_of_the_stay"
                android:textAllCaps="false"
                android:textColor="@color/colorBottomNavigationAccent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp" />

            <TextView
                android:id="@+id/request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/number_of_traveller"
                android:layout_marginEnd="81dp"
                android:text="Dates Available"
                android:layout_alignParentRight="true"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/number_of_traveller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="104dp"
                android:text="No. Of Traveller"
                android:layout_alignParentRight="true"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/status"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Status" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>