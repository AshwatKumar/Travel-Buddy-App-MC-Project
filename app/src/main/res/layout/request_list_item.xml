<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/requested_person_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/todo"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/default_person_image" />

            <TextView
                android:id="@+id/requested_person_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/requested_person_image"
                android:shadowColor="@color/cardview_dark_background"
                android:text="@string/name_of_the_stay"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/requested_person_username"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/requested_person_image"
                android:text="Dates Available"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/number_of_traveller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@+id/requested_person_image"
                android:text="No. Of Traveller"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/requested_person_username"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:layout_toLeftOf="@+id/requested_person_image"
                android:text="Status"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>